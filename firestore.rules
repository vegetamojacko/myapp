rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // A user can only create, read, update, or delete their own document.
    match /users/{userId} {
      allow read, update, delete, create: if request.auth != null && request.auth.uid == userId;
    }

    // A user can create a claim for themselves, and can only read, update, or delete their own claims.
    match /claims/{claimId} {
      // The new claim's userId must match the creator's UID.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Only the user associated with the claim can read, update, or delete it.
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
